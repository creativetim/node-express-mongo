{{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
{{/each}}

<div class="card card-body">
    <h3>Edit Video Idea</h3>
    <form action="/ideas/{{idea.id}}?_method=PUT" method="post">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" name="title" id="title" value="{{{idea.title}}}" placeholder="Title of idea" required />
        </div>
        <div class="form-group">
            <label for="details">Details</label>
            <textarea name="details" id="details" cols="30" rows="10" class="form-control" required>{{{idea.details}}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <input type="hidden" name="method" value="PUT" />
    </form>
</div>
