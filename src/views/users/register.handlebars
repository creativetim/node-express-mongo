<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <h3 class="text-center">Create an account</h3>
            <form method="post" action="/users/register">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" name="name" id="name" class="form-control" placeholder="Your name" value="{{name}}" required />
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="Email address" value="{{email}}" required />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Password" value="{{password}}" required />
                </div>
                <div class="form-group">
                    <label for="password2">Confirm password</label>
                    <input type="password" name="password2" id="password2" class="form-control" placeholder="Confirm password" value="{{password2}}" required />
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>